<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_account_analytic_account_form" model="ir.ui.view">
        <field name="name">analytic.analytic.account.form (in account_analytic_security_account)</field>
        <field name="model">account.analytic.account</field>
        <field name="inherit_id" ref="account.account_analytic_account_view_form_inherit"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='vendor_bill_count']/.." position="attributes">
                <attribute name="groups">account.group_account_invoice</attribute>
            </xpath>
        </field>
    </record>

</odoo>
