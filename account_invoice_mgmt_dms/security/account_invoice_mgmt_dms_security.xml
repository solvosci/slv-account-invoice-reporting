<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="ir.module.category" id="module_invoice_dms_category">
            <field name="name">Document Invoicing</field>
        </record>

        <record id="group_invoice_validator" model="res.groups">
            <field name="name">Validator</field>
            <field name="category_id" ref="account_invoice_mgmt_dms.module_invoice_dms_category"/>
            <field name="implied_ids" eval="[(4, ref('dms.group_dms_user')), (4, ref('account.group_account_invoice'))]"/>
        </record>

        <record id="group_invoice_approver" model="res.groups">
            <field name="name">Approver</field>
            <field name="category_id" ref="account_invoice_mgmt_dms.module_invoice_dms_category"/>
            <field name="implied_ids" eval="[(4, ref('account_invoice_mgmt_dms.group_invoice_validator'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>

    </data>
</odoo>
