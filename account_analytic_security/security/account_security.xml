<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="group_creation_analytic_account" model="res.groups">
            <field name="name">Create / Delete analytic account</field>
            <field name="category_id" ref="base.module_category_hidden"/>
        </record>
    </data>
    <data noupdate="1">
        <record id="enabled_creation_deletion_all_analytic_accounts" model="ir.rule">
            <field name="name">Enabled creation/deletion all analytic accounts</field>
            <field name="model_id" ref="analytic.model_account_analytic_account"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('account_analytic_security.group_creation_analytic_account'))]"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_read" eval="False"/>
            <field name="perm_unlink" eval="True"/>
            <field name="perm_create" eval="True"/>
        </record>

        <record id="disabled_creation_deletion_all_analytic_accounts" model="ir.rule">
            <field name="name">Disabled creation/deletion all analytic accounts</field>
            <field name="model_id" ref="analytic.model_account_analytic_account"/>
            <field name="domain_force">[('currency_id','=', False)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_read" eval="False"/>
            <field name="perm_unlink" eval="True"/>
            <field name="perm_create" eval="True"/>
        </record>
    </data>
</odoo>
